<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="mainText">#0d47a1</item>
        <item name="textAlt">#b3e5fc</item>
        <item name="mainBackground">#b3e5fc</item>
        <item name="mainBackgroundSecond">#81d4fa</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">#0d47a1</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyAppBarLayoutTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlHighlight">#0d47a1</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!-- для Android 5+ вы можете поменять цвет colorPrimaryDark, чтобы соответствовать цвету windowBackground -->
        <item name="colorPrimaryDark">@color/colorBackground</item>
    </style>

    <style name="TextBlackTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#0d47a1</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="TextDescription">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0d47a1</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="TextName">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#b3e5fc</item>
        <item name="android:fontFamily">@font/raleway_light</item>
    </style>
</resources>
